            <Input name="email" type="email" placeholder="email" />
            <Input name="password" type="password" placeholder="password" />
            <Action class="primary" click="form(id:'form-login',action:'login')" ><Text>Login</Text></Action>
        </Action>
        <Action type="form" action="/registration" id="form-registration">
            <Input name="email" placeholder="email" />
            <Input name="password" placeholder="password" type="password" />
            <Input name="password-repeat" placeholder="password repetition" type="password" />
            <Action class="primary" click="form(id:'form-registration',action:'registration')" ><Text>Registrazione</Text></Action>
